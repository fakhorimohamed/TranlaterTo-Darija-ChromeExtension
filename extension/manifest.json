{
  "manifest_version": 3,
  "name": "Darija Translator",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*"
  ],
  "action": {
    "default_title": "Open"
  }
}